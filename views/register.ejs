            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-3">Registration Form </h2>
              <% if (message.length > 0) { %>
                <div class="alert alert-success">
                    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
